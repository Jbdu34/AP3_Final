{% extends 'base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;600&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="{{ asset('css/custom.css') }}">
{% endblock %}

{% block title %}Planning des Observations{% endblock %}

{% block body %}
<div class="container mt-5">
    <h1 class="text-center mb-5">Planning des Observations</h1>
    
    <div class="row mb-5">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0 d-flex align-items-center">
                        <i class="fas fa-calendar-alt me-2"></i>
                        Cette Semaine
                    </h5>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th><i class="fas fa-calendar-day me-2"></i>Date</th>
                                    <th><i class="fas fa-clock me-2"></i>Heure</th>
                                    <th><i class="fas fa-globe me-2"></i>Planète</th>
                                    <th><i class="fas fa-star me-2"></i>Phénomène</th>
                                    <th><i class="fas fa-info-circle me-2"></i>État</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td>Lundi 15 Mai</td>
                                    <td>21:00</td>
                                    <td>Mars</td>
                                    <td>Opposition</td>
                                    <td><span class="badge bg-success">Confirmé</span></td>
                                </tr>
                                <tr>
                                    <td>Mercredi 17 Mai</td>
                                    <td>22:30</td>
                                    <td>Jupiter</td>
                                    <td>Transit d'Io</td>
                                    <td><span class="badge bg-warning">En attente</span></td>
                                </tr>
                                <tr>
                                    <td>Vendredi 19 Mai</td>
                                    <td>20:00</td>
                                    <td>Saturne</td>
                                    <td>Observation des anneaux</td>
                                    <td><span class="badge bg-info">Prévu</span></td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-6 mb-4">
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0 d-flex align-items-center">
                        <i class="fas fa-meteor me-2"></i>
                        Événements à venir
                    </h5>
                </div>
                <div class="card-body">
                    <div class="list-group">
                        <div class="list-group-item event-card">
                            <div class="d-flex w-100 justify-content-between align-items-center">
                                <div>
                                    <h6 class="mb-1">Eclipse solaire</h6>
                                    <p class="mb-0 text-muted"><i class="fas fa-clock me-2"></i>25 Mai - 15:30</p>
                                </div>
                                <span class="badge bg-primary">À venir</span>
                            </div>
                        </div>
                        <div class="list-group-item event-card">
                            <div class="d-flex w-100 justify-content-between align-items-center">
                                <div>
                                    <h6 class="mb-1">Pluie de météores</h6>
                                    <p class="mb-0 text-muted"><i class="fas fa-clock me-2"></i>30 Mai - 02:00</p>
                                </div>
                                <span class="badge bg-primary">À venir</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-6 mb-4">
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0 d-flex align-items-center">
                        <i class="fas fa-cloud-moon me-2"></i>
                        Conditions d'observation
                    </h5>
                </div>
                <div class="card-body">
                    <ul class="list-group conditions-list">
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            <span><i class="fas fa-eye me-2"></i>Visibilité</span>
                            <span class="badge bg-success rounded-pill">Excellente</span>
                        </li>
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            <span><i class="fas fa-cloud me-2"></i>Météo</span>
                            <span class="badge bg-primary rounded-pill">Dégagé</span>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>

    <div class="text-center mt-5">
        <a href="{{ path('app_planets') }}" class="btn btn-primary">
            <i class="fas fa-arrow-left me-2"></i>Retour aux Planètes
        </a>
    </div>
</div>
{% endblock %}